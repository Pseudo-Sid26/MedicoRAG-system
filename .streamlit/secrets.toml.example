# Streamlit Cloud Secrets Configuration
# Copy this file and rename to secrets.toml (for local development)
# For Streamlit Cloud deployment, add these secrets in the Streamlit Cloud dashboard

# Required API Keys
GROQ_API_KEY = "your_groq_api_key_here"

# Model Configuration (Optional - these are defaults)
GROQ_MODEL = "llama3-8b-8192"
EMBEDDING_MODEL = "tfidf"

# Vector Store Configuration
VECTOR_STORE_DIRECTORY = "./vectordb_store"
COLLECTION_NAME = "medical_documents"
EMBEDDING_DIMENSION = "384"

# Processing Configuration
CHUNK_SIZE = "1000"
CHUNK_OVERLAP = "200"
TOP_K_RETRIEVAL = "5"
SIMILARITY_THRESHOLD = "0.3"

# Response Configuration
MAX_RESPONSE_TOKENS = "800"
RESPONSE_TEMPERATURE = "0.1"

# File Upload Configuration
MAX_FILE_SIZE = "104857600"

# Application Configuration
LOG_LEVEL = "INFO"
